{
  "manifest_version": 2,
  "name": "Tab Workspaces",
  "version": "0.1.0",

  "description": "Organize your tabs into workspaces. Switch between workspaces to change which tabs are displayed at the moment.",
  "icons": {
    "48": "img/container-site-d-48.png",
    "96": "img/container-site-d-96.png"
  },

  "applications": {
    "gecko": {
      "strict_min_version": "53.0"
    }
  },

  "homepage_url": "https://fonse.github.com/tab-workspaces",

  "permissions": [
    "<all_urls>",
    "activeTab",
    "cookies",
    "contextMenus",
    "contextualIdentities",
    "history",
    "idle",
    "storage",
    "tabs",
    "webRequestBlocking",
    "webRequest"
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": "img/container-site.svg",
    "default_title": "Workspaces",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": [
      "background/backgroundLogic.js",
      "background/workspace.js",
      "background/workspaceStorage.js",
      "background/messageHandler.js"
    ]
  }
}
